<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.bullet.bulletjournal.Controllers.AddTareaController"
            prefHeight="400.0" prefWidth="500.0">
    <AnchorPane>
        <VBox alignment="CENTER" spacing="10">
            <Label text="Titulo*"/>
            <TextField fx:id="txtTitulo" prefWidth="500"/>
            <Label text="Descripcion"/>
            <TextArea fx:id="txtDescripcion"/>
            <Label text="Fecha"/>
            <DatePicker fx:id="dateFecha"/>
            <Label text="Sticker"/>
            <ComboBox fx:id="cmbSticker">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Nada"/>
                        <String fx:value="Warning"/>
                        <String fx:value="Pencil"/>
                        <String fx:value="Equis"/>
                        <String fx:value="Estrella"/>
                    </FXCollections>
                </items>
            </ComboBox>
            <Label text="Color"/>
            <ColorPicker fx:id="colorPicker"/>
            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="btnCancelar">
                    Cancelar
                </Button>
                <Button fx:id="btnAceptar">
                    Aceptar
                </Button>
            </HBox>
        </VBox>

    </AnchorPane>
</AnchorPane>
